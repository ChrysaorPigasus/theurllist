---
import Layout from '@layouts/Layout.astro';
import CreateNewUrlList from '@components/features/list-management/CreateNewList';
import ViewAllLists from '@components/features/list-management/ViewAllLists';
---

<Layout title="The Urlist - Share Your URL Collections">
  <main class="min-h-screen bg-gray-50" data-testid="home-page">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">The Urlist</span>
          <span class="block text-blue-600">Share Your URL Collections</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Create, manage, and share collections of URLs with others. Customize your list URLs and organize your links in one place.
        </p>
      </div>

      <div class="space-y-8">
        {/* Create New List Section */}
        <section aria-labelledby="create-new-list-heading">
          <div class="bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <CreateNewUrlList client:idle />
            </div>
          </div>
        </section>

        {/* View All Lists Section */}
        <section aria-labelledby="view-all-lists-heading">
          <div class="bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <ViewAllLists client:idle />
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Any additional page-specific styles */
</style>

<script>
  // Client-side logging for homepage
  console.log('Home page loaded - URL:', window.location.href);
  console.log('Home page load timestamp:', new Date().toISOString());
  
  // Log browser details
  console.log('Browser details:', {
    userAgent: navigator.userAgent,
    language: navigator.language,
    viewport: {
      width: window.innerWidth,
      height: window.innerHeight
    }
  });

  // Track page visit duration
  const pageLoadTime = performance.now();
  window.addEventListener('beforeunload', () => {
    const duration = performance.now() - pageLoadTime;
    console.log(`Home page visit duration: ${(duration / 1000).toFixed(2)} seconds`);
  });

  // Log when components are hydrated
  document.addEventListener('astro:hydrated', (event) => {
    console.log('Component hydrated:', event.target.tagName, performance.now().toFixed(2) + 'ms');
  });
</script>