{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@stores/*": ["./src/stores/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@tests/api/*":["./tests/api/*"],
      "@tests/bdd/*":["./tests/bdd/*"],
      "@tests/e2e/*":["./tests/e2e/*"],
      "@tests/mocks/*":["./tests/mocks/*"],
      "@tests/unit/*":["./tests/unit/*"],
      "@tests/utils/*":["./tests/utils/*"]}
  }
}
