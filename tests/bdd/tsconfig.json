{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "../../dist/bdd",
    "baseUrl": "../..",
    "paths": {
      "@src/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@stores/*": ["./src/stores/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@tests/api/*": ["./tests/api/*"],
      "@tests/bdd/*": ["./tests/bdd/*"],
      "@tests/e2e/*": ["./tests/e2e/*"],
      "@tests/mocks/*": ["./tests/mocks/*"],
      "@tests/unit/*": ["./tests/unit/*"],
      "@tests/utils/*": ["./tests/utils/*"],
      "*": ["./node_modules/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js",
    "./**/*.jsx"
  ]
}